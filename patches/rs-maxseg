 			opt_on = *(int *) optval;
 			ret = 0;
 			break;
+		case TCP_MAXSEG:
+			ret = 0;
+			break;
 		default:
 			break;
 		}
@@ -1814,6 +1817,15 @@ int rgetsockopt(int socket, int level, int optname,
 			*((int *) optval) = !!(rs->tcp_opts & (1 << optname));
 			*optlen = sizeof(int);
 			break;
+		case TCP_MAXSEG:
+			if (rs->cm_id && rs->cm_id->route &&
+			    rs->cm_id->route.num_paths) {
+				*((int *) optval) = 1 << (7 + rs->cm_id->route.path_rec->mtu);
